{
  "extends": "../tsconfig.ng-cli.json",
  "compilerOptions": {
    "outDir": "../out-tsc/spec",
    "baseUrl": "./",
    "module": "commonjs",
    "target": "es5",
    "paths": {
      "@components/*": ["components/*"],
      "@providers/*": ["providers/*"],
      "@models/*": ["models/*"],
      "@directives/*": ["directives/*"],
      "@pipes/*": ["pipes/*"],
      "@app/*": ["app/*"],
      "@root/*": ["../"]
    },
    "types": [
      "jasmine",
      "node"
    ]
  },
  "files": [
    "test.ts"
  ],
  "include": [
    "**/*.spec.ts",
    "**/*.d.ts"
  ]
}
