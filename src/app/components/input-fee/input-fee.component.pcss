:host {
	@apply w-full;

	ion-range {
		bottom: -0.5rem;
		--bar-height: 3px;
		--height: 1rem;
		--knob-size: 1.5rem;
		--knob-handle-size: 1.5rem;
		--bar-background: var(--ion-color-light-shade);
	}

	ion-item {
		--padding-start: 0;
	}

	.c-input-fee__hint {
		@apply py-2 text-sm italic;
	}

	.c-input-fee__hint--info {
		color: var(--ion-color-medium-shade);
	}

	.c-input-fee__hint--warn {
		color: var(--ion-color-warning-shade);
	}
}
