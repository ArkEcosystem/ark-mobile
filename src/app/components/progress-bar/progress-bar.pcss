:host {
  .progress-outer {
    position: relative;
    width: 96%;
    margin: 10px 2%;
    padding: 3px;
    text-align: center;
    background-color: var(--ion-color-light-shade);
    border-radius: 20px;
  }

  .progress-inner {
    min-width: 5%;
    white-space: nowrap;
    overflow: hidden;
    padding: 10px;
    border-radius: 20px;
    background-color: var(--ion-color-danger);
  }
}

:host-context(.dark-theme) {
  .progress-inner {
    background-color: var(--ion-color-primary);
  }
}