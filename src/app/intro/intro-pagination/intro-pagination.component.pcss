.intro__pagination {
	max-width: 80px;

	span {
		@apply w-1 h-1 border bg-transparent rounded-full relative inline-block text-center opacity-25;
		border-color: var(--ion-color-medium);
		background-color: var(--ion-color-medium);
		transition: width 0.25s ease;
	}

	.active span {
		@apply w-8 h-1 rounded-full opacity-100;
		border-color: var(--ion-color-primary);
		background-color: var(--ion-color-primary);
	}
}
